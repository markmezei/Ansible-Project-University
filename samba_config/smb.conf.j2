[global]
   workgroup = SAMBA
   security = user
   passdb backend = tdbsam
   printing = cups
   printcap name = cups
   load printers = yes
   cups options = raw

[homes]
    comment = Home Directories
    valid users = %S, %D%w%S
    browseable = no
    read only = no
    inherit acls = yes

[printers]
    comment = All Printers
    path = /var/tmp
    printable = yes
    create mask = 0600
    browseable = no

[print$]
    comment = Printer Drivers
    path = /var/lib/samba/drivers
    write list = @printadmin root
    force group = @printadmin
    create mask = 0644
    directory mask = 0755

[data]
   path = /data/fontos
   valid users = @fonokok
   writable = yes
   browseable = yes
   guest ok = no
   create mask = 0770
   directory mask = 0770
   force user = fonok
   force group = fonokok